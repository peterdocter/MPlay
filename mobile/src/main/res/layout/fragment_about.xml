<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center">

    <TextView
        android:id="@+id/version_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"/>

    <Button
        android:id="@+id/about_developer_button"
        android:text="@string/about_developer_button"
        style="@style/SecondaryActionButtonStyle"/>

    <Button
        android:id="@+id/about_legal_button"
        android:text="@string/about_legal_button"
        style="@style/SecondaryActionButtonStyle"/>

    <Button
        android:id="@+id/about_terms_button"
        android:text="@string/about_terms_button"
        style="@style/SecondaryActionButtonStyle"/>
</LinearLayout>